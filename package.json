{
  "name": "javascript-test-runner",
  "displayName": "JavaScript Test Runner",
  "description": "Run JavaScript tests easily using CodeLens.",
  "version": "1.2.6",
  "publisher": "weakptr",
  "engines": {
    "vscode": "^1.39.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "mocha",
    "react-scripts",
    "jest",
    "test",
    "unit"
  ],
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nnnewb/javascript-test-runner"
  },
  "icon": "ressources/icon.png",
  "main": "./out/extension",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "javascript-test-runner.run.test",
        "title": "Run Test"
      }
    ],
    "configuration": [
      {
        "properties": {
          "javascript-test-runner.additionalArgs": {
            "type": "string",
            "default": "",
            "description": "CLI args to pass to test runner. Example : --watch",
            "scope": "resource"
          },
          "javascript-test-runner.envVars": {
            "type": "object",
            "default": {
              "NODE_ENV": "test"
            },
            "description": "Environment variables to set before running a test.",
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --noUnusedParameters --noUnusedLocals -p ./",
    "watch": "tsc -watch  --noUnusedParameters --noUnusedLocals  -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,json} package.json",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,}": [
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "@types/vscode": "^1.39.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.25.0",
    "glob": "^7.1.7",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.4.0",
    "prettier": "2.2.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@babel/core": "^7.14.0",
    "@babel/parser": "^7.14.1",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/plugin-syntax-typescript": "^7.12.13"
  }
}
